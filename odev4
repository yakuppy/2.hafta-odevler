deneme_sayisi=0

while True:
    tahmin = int(input("lufen 1 ile 10 arasinda bir sayi tahmin ediniz"))
    sayi=5
    deneme_sayisi = deneme_sayisi + 1
    

    if tahmin==sayi:
        print("tebrikler {} denemede bildiniz".format(deneme_sayisi))
        break

    elif tahmin!=sayi:
        print("maalesef {} denemede bilemediniz tekrar deneyiniz".format(deneme_sayisi))

